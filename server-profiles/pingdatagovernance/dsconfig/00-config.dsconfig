dsconfig create-gateway-api-endpoint \
    --endpoint-name 'Bank Balances'  \
    --set service:Banking.Balances  \
    --set inbound-base-path:/open-banking/v2.0/balances  \
    --set outbound-base-path:/OpenBanking/v2/balances  \
