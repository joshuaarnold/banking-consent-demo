dsconfig create-external-server \
    --server-name 'pingdirectory ldap'  \
    --type ping-identity-ds  \
    --set server-host-name:${PD_INTERNAL_HOSTNAME}  \
    --set server-port:${PD_LDAPS_PORT}  \
